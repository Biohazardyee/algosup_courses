<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Calculator.MainPage">

    <VerticalStackLayout>
        <Grid Padding="10"
              RowSpacing="10"
              ColumnSpacing="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Display -->
            <Label x:Name="LblDisplay"
                   Text="0"
                   Grid.Row="0"
                   Grid.Column="0"
                   Grid.ColumnSpan="4"
                   HorizontalTextAlignment="End"
                   FontSize="36"/>


            <!-- Buttons Row 1 -->
            <Button x:Name="BtnSeven"
                    Text="7"
                    Grid.Row="1"
                    Grid.Column="0"
                    Clicked="BtnSeven_Clicked"/>
            <Button x:Name="BtnEight"
                    Text="8"
                    Grid.Row="1"
                    Grid.Column="1"
                    Clicked="BtnEight_Clicked"/>

            <Button x:Name="BtnNine"
                    Text="9"
                    Grid.Row="1"
                    Grid.Column="2"
                    Clicked="BtnNine_Clicked"/>
            <Button x:Name="BtnDivide"
                    Text="÷"
                    Grid.Row="1"
                    Grid.Column="3"
                    Clicked="BtnDivide_Clicked"/>

            <!-- Buttons Row 2 -->
            <Button x:Name="BtnFour"
                    Text="4"
                    Grid.Row="2"
                    Grid.Column="0"
                    Clicked="BtnFour_Clicked"/>
            <Button x:Name="BtnFive"
                    Text="5"
                    Grid.Row="2"
                    Grid.Column="1"
                    Clicked="BtnFive_Clicked"/>
            <Button x:Name="BtnSix"
                    Text="6"
                    Grid.Row="2"
                    Grid.Column="2"
                    Clicked="BtnSix_Clicked"/>
            <Button x:Name="BtnMultiply"
                    Text="×"
                    Grid.Row="2"
                    Grid.Column="3"
                    Clicked="BtnMultiply_Clicked"/>

            <!-- Buttons Row 3 -->
            <Button x:Name="BtnOne"
                    Text="1"
                    Grid.Row="3"
                    Grid.Column="0"
                    Clicked="BtnOne_Clicked"/>
            <Button x:Name="BtnTwo"
                    Text="2"
                    Grid.Row="3"
                    Grid.Column="1"
                    Clicked="BtnTwo_Clicked"/>
            <Button x:Name="BtnThree"
                    Text="3"
                    Grid.Row="3"
                    Grid.Column="2"
                    Clicked="BtnThree_Clicked"/>
            <Button x:Name="BtnMinus"
                    Text="-"
                    Grid.Row="3"
                    Grid.Column="3"
                    Clicked="BtnMinus_Clicked"/>
            <!-- Buttons Row 4 -->
            <Button x:Name="BtnZero"
                    Text="0"
                    Grid.Row="4"
                    Grid.Column="0"
                    Clicked="BtnZero_Clicked"/>
            <Button x:Name="BtnDecimal"
                    Text="."
                    Grid.Row="4"
                    Grid.Column="1"
                    Clicked="BtnDecimal_Clicked"/>
            <Button x:Name="BtnPlus"
                    Text="+"
                    Grid.Row="4"
                    Grid.Column="2"
                    Clicked="BtnPlus_Clicked"/>
            <Button x:Name="BtnEquals"
                    Text="="
                    Grid.Row="4"
                    Grid.Column="3"
                    Clicked="BtnEquals_Clicked"/>

            <!-- Clear Button -->
            <Button x:Name="BtnClear"
                    Text="Clear"
                    Grid.Row="5"
                    Grid.Column="0"
                    Grid.ColumnSpan="4"
                    Clicked="BtnClear_Clicked"/>

        </Grid>
    </VerticalStackLayout>

</ContentPage>
